{
  "name": "cron-lens",
  "publisher": "CodyVal",
  "displayName": "CRON Lens",
  "description": "Display CRON schedules in human-readable format",
  "version": "0.0.1",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "CRON Lens",
      "properties": {
        "cronLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable CRON Lens"
        },
        "cronLens.filePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*.js",
            "*.ts",
            "*.py",
            "*.java",
            "*.yaml",
            "*.yml",
            "*.json"
          ],
          "description": "File patterns where CRON Lens should be active (e.g. *.js, *.config)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:package": "mkdir -p ./bin && vsce package --out ./bin/",
    "vscode:publish": "vsce publish",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "cron-parser": "^4.2.0",
    "cronstrue": "^2.11.0",
    "minimatch": "^5.1.0"
  }
}
